<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="/css/all.css" rel="stylesheet" />
    <link href="/css/bulma.css" rel="stylesheet" />
    <script src="/js/all.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/vue@2/dist/vue.js"></script>
    <title>My Blogs</title>
  </head>
  <section id="app">
  <body>
    <div class="container is-widescreen">
        <section class="section">
        <div class="container is-widescreen">
            <div class="notification is-danger">
            </div>
          </div>
        </section>
    <section class="hero">
      <div class="hero-body">
        <p class="title">{{blog.title}}</p>
      </div>
    </section>
    <section class="section">
        <div class="content">
            <div class="card has-background-light">
                <div class="card-image pt-5">
                    <div class="columns">
                        <div class="column" v-for="image in images">
                            <figure class="image">
                                <img :src="image.file_path" alt="Placeholder image">
                            </figure>
                        </div>
                    </div>
                    <div class="columns">
                        <p>{{blog.content}}</p>
                    </div>
                </div>
                <div class="card-content">
                    <div class="content">
                    </div>
                    <div class="container">
                        <p class="subtitle">Comments ({{comments.length}})</p>
                                <div class="box" v-for="comment in comments" :key="'comment_' + comment.id">
                                    <article class="media">
                                    <div class="media-left">
                                        <figure class="image is-64x64">
                                        <img src="https://bulma.io/images/placeholders/128x128.png" alt="Image">
                                        </figure>
                                    </div>
                                    <div class="media-content">
                                        <div class="content">
                                        <p>
                                            {{comment.comment}}
                                        </p>
                                        <p class="is-size-7">{{comment.comment_date}}</p>
                                        </div>
                                        <nav class="level is-mobile">
                                        <div class="level-left">
                                            <form method="post" :action="'/comments/addlike/' + comment.id" 
                                            :id="'likeComment' + comment.id">
                                                <a class="level-item" aria-label="like" 
                                                @click="addlike(comment.id)">
                                                <span class="icon is-small">
                                                    <i class="fas fa-heart" aria-hidden="true"></i>
                                                    ({{comment.like}})
                                                </span>
                                                </a>
                                            </form>
                                        </div>
                                        <div class="level-right">
                                            <form method="post" :action="'/comments/' + comment.id"
                                            :id="'deleteComment' + comment.id">
                                                <a class="level-item" aria-label="like" 
                                                @click="deleteComment(comment.id)">
                                                <span class="icon is-small">
                                                    <i class="fas fa-trash" aria-hidden="true"></i>
                                                </span>
                                                </a>
                                            </form>
                                        </div>
                                        </nav>
                                    </div>
                                    </article>
                                </div>
                                <form :action="'/' + blog.id + '/comments'" method="post">
                                    <div class="field">
                                        <label class="label">Add Comment</label>
                                        <div class="control">
                                          <textarea class="textarea" name="comment" placeholder="Add Comment Here"></textarea>
                                        </div>
                                      </div>
                                    <input class="button is-primary" type="submit" value="Submit">
                                </form>
                    </div>
                </div>
                <footer class="card-footer">
                    <a class="card-footer-item" href="/">To Home Page</a>
                </footer>
            </div>
        </div>
    </section>
    </div>
  </body>
</section>
<script>
    var app = new Vue({
        el: "#app",
        data: {
            blog: JSON.parse(`<%- blog %>`),
            images: JSON.parse(`<%- Image %>`),
            comments: JSON.parse(`<%- comments %>`)
        },
        methods: {
            addlike(id){
                this.comments = this.comments.map((x) => {
                    if(x.id == id){
                        x.like++
                    }
                    return x
                })
                document.getElementById("likeComment" + id).submit()
            },
            deleteComment(id){
                this.comments = this.comments.filter((comment) => {
                    return comment.id != id
                })
                document.getElementById("deleteComment" + id).submit()
            }
        }
    })
</script>
</html>